<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>Servlets.login.ServletLogin</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletNewUser</servlet-name>
        <servlet-class>Servlets.login.ServletNewUser</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletNewUser</servlet-name>
        <url-pattern>/newUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletShowServices</servlet-name>
        <servlet-class>Servlets.user.ServletShowServices</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletShowServices</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletInsertRequest</servlet-name>
        <servlet-class>Servlets.user.ServletInsertRequest</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ServletInsertRequest</servlet-name>
        <url-pattern>/insertRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletLogout</servlet-name>
        <servlet-class>Servlets.login.ServletLogout</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletLogout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletMyRequests</servlet-name>
        <servlet-class>Servlets.user.ServletMyRequests</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletMyRequests</servlet-name>
        <url-pattern>/myRequests</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletManageRequests</servlet-name>
        <servlet-class>Servlets.admin.ServletManageRequest</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletManageRequests</servlet-name>
        <url-pattern>/manageRequests</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletManageRequestsByMaster</servlet-name>
        <servlet-class>Servlets.admin.ServletManageRequestByMaster</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletManageRequestsByMaster</servlet-name>
        <url-pattern>/manageRequestsByMaster</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletManageRequestsByStatus</servlet-name>
        <servlet-class>Servlets.admin.ServletManageRequestByStatus</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletManageRequestsByStatus</servlet-name>
        <url-pattern>/manageRequestsByStatus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletWorkRequests</servlet-name>
        <servlet-class>Servlets.admin.ServletWorkRequests</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletWorkRequests</servlet-name>
        <url-pattern>/workRequests</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletWallet</servlet-name>
        <servlet-class>Servlets.user.ServletWallet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletWallet</servlet-name>
        <url-pattern>/wallet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletRequestAddMoney</servlet-name>
        <servlet-class>Servlets.user.ServletRequestAddMoney</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletRequestAddMoney</servlet-name>
        <url-pattern>/moneyRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletAddMoney</servlet-name>
        <servlet-class>Servlets.admin.ServletAddMoney</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletAddMoney</servlet-name>
        <url-pattern>/addMoney</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletCancelRequest</servlet-name>
        <servlet-class>Servlets.user.ServletCancelRequest</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletCancelRequest</servlet-name>
        <url-pattern>/cancelRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletPayment</servlet-name>
        <servlet-class>Servlets.user.ServletPayment</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletPayment</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletAddMoneyList</servlet-name>
        <servlet-class>Servlets.admin.ServletAddMoneyList</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletAddMoneyList</servlet-name>
        <url-pattern>/addMoneyList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletUpdateStatus</servlet-name>
        <servlet-class>Servlets.admin.ServletUpdateStatus</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletUpdateStatus</servlet-name>
        <url-pattern>/updateCostStatus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletUpdateStatusByMaster</servlet-name>
        <servlet-class>Servlets.admin.ServletUpdateStatusByMaster</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletUpdateStatusByMaster</servlet-name>
        <url-pattern>/updateStatusByMaster</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletFeedback</servlet-name>
        <servlet-class>Servlets.user.ServletFeedback</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletFeedback</servlet-name>
        <url-pattern>/feedback</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletSaveReport</servlet-name>
        <servlet-class>Servlets.admin.ServletSaveReport</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletSaveReport</servlet-name>
        <url-pattern>/saveReport</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>Login</filter-name>
        <filter-class>Filters.FilterLogin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Login</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthorizationUser</filter-name>
        <filter-class>Filters.FilterAuthorization</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationUser</filter-name>
        <url-pattern>/cancelRequest</url-pattern>
        <url-pattern>/feedback</url-pattern>
        <url-pattern>/insertRequest</url-pattern>
        <url-pattern>/myRequests</url-pattern>
        <url-pattern>/payment</url-pattern>
        <url-pattern>/moneyRequest</url-pattern>
        <url-pattern>/show</url-pattern>
        <url-pattern>/wallet</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthorizationAdmin</filter-name>
        <filter-class>Filters.FilterAuthorizationAdmin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationAdmin</filter-name>
        <url-pattern>/addMoney</url-pattern>
        <url-pattern>/addMoneyList</url-pattern>
        <url-pattern>/manageRequests</url-pattern>
        <url-pattern>/manageRequestsByMaster</url-pattern>
        <url-pattern>/manageRequestsByStatus</url-pattern>
        <url-pattern>/saveReport</url-pattern>
        <url-pattern>/updateCostStatus</url-pattern>
        <url-pattern>/updateStatusByMaster</url-pattern>
        <url-pattern>/workRequests</url-pattern>
    </filter-mapping>


</web-app>